@using SiGotvime.Utilities
@{
    ViewBag.Title = "RecipeSaved";
}

<div class="wrap clearfix">
    <!--row-->
    <div class="row wow fadeInUp">
        <!--content-->
        <section class="content three-fourth">
            <!--row-->
            <div class="row">
                <div class="one-third">
                    <div class="error-container">
                        <span class="error_type_white">
                            <img src="~/Content/Utilities/okTick.png" height="110" style="margin:auto;"/>
                        </span>
                        <span class="error_text_green">Рецептот е зачуван</span>
                    </div>
                </div>

                <div class="two-third">
                    <div class="container">
                        <h3 style="padding-top:0;">Вашиот рецепт е зачуван! </h3>
                        <p>Пред да ви биде објавен рецептот и да биде поставен во нашиот систем, треба да биде одобрен од администраторите!</p>
                        <p>Вратете се на вашата <a href="@Url.Action("Profile", "User", new { id = Env.UserID() })">профил</a> страница </p>
                    </div>
                </div>
            </div>
            <!--//row-->
        </section>
        <!--//content-->
        <!--sidebar-->
        <aside class="sidebar one-fourth">
           @Html.Action("Advertisments", "Home")
        </aside>
        <!--//sidebar-->
    </div>
    <!--//row-->
</div>

@section Scripts{
    <script>
        $("body").addClass("errorPage");
    </script>
}

