                    <div class="actions">
                        <div>
                            <div class="date"><i class="ico i-date"></i><a href="javascript:void(0)">@item.DateCreated.ToString("dd MMM yyyy", System.Globalization.CultureInfo.InvariantCulture)</a></div>
                            <div class="comments"><i class="ico i-comments"></i><a href="@Url.Action("GetPost", "Blog", new  {id = item.BlogPostID })#comments">@item.CommentCount</a></div>
                        </div>
                    </div>
                    <div class="excerpt">
                        <p>@item.Description</p>
                    </div>
                </div>
            </div>
        }
    }
</div>